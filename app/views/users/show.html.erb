<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'user', user: @user %>
   <%= render 'books/book', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h1>Books</h1>
      <table class="table table-striped">
        <thread>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
          </tr>
        </thread>
        <tbody>
        <% @books.each do |book| %>
         <tr>
            <td><%= image_tag book.user.get_profile_image("100x100") %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
         </tr>
        <% end %>
        </tbody>
       </table>

  </div>
 </div>
</div>



