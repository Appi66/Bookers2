<table class="table table-user">
 <h2>User Info</h2>
 <thead>
  <tr>
   <%= image_tag user.get_profile_image("100x100") %>
  </tr>
 </thead>
 <tbody>
  <tr>
   <th>Name</th>
   <th><%= user.name %></th>
  </tr>
  <tr>
   <th>Introduction</th>
   <th><%= user.introduction %></th>
  </tr>
  <tr>
   <th colspan="2">
    <%= link_to edit_user_path(current_user) do %><span class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></i></span><% end %>
   </th>
  </tr>
 </tbody>
</table>


