<table class="table table-user">
 <h2>User Info</h2>
 <thead>
  <tr>
   <%= image_tag user.get_profile_image("100x100") %>
  </tr>
 </thead>
 <tbody>
  <tr>
   <th>Name</th>
   <th><%= user.name %></th>
  </tr>
  <tr>
   <th>Introduction</th>
   <th><%= user.introduction %></th>
  </tr>
  <tr>
   <th colspan="2">
    <%= link_to "Edit", edit_user_path(current_user) %>
   </th>
  </tr>
 </tbody>
</table>


