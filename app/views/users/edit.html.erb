<h1>User Info</h1>
<% if @user.errors.any? %>
 <%= pluralize(@user.errors.count, "error") %>  prohibited this obj from being saved:
  <ul>
   <% @user.errors.full_messages. each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>

<%= form_with model: @user, local:true do |f| %>
 <p>Name</p>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "Name" %>
 <p>ProfileImage</p>
 <%= f.file_field :profile_image, placeholder: "Profile Image", accept: "image/*" %>
 <p>Introduction</p>
 <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "Introduction" %>
 <%= f.submit "Update User" %>
<% end %>
