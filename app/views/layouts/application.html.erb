<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/63d598b7fb.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand navbar-left" href="/"><span>Bookers</span></a>
        <nav class="d-flex align-items-center">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to user_path(current_user.id) do %><span class="text-light nav-link"><i class="fas fa-home"></i>Home</span><% end %></li>
            　<li class="nav-item"><%= link_to users_path do %><span class="text-light nav-link"><i class="fas fa-users"></i>Users</span><% end %></li>
              <li class="nav-item"><%= link_to books_path do %><span class="text-light nav-link"><i class="fas fa-book-open"></i>Books</span><% end %></li>
              <li class="nav-item"><%= link_to destroy_user_session_path, method: :delete do %><span class="text-light nav-link"><i class="fas fa-sign-out-alt"></i>Log out</span><% end %></li>
            <% else %>
              <li class="nav-item"><%= link_to root_path do %><span class="text-light nav-link"><i class="fas fa-home"></i>Home</span><% end %></li>
              <li class="nav-item"><%= link_to about_path do %><span class="text-light nav-link"><i class="fas fa-link"></i>About</span><% end %></li>
              <li class="nav-item"><%= link_to new_user_registration_path do %><span class="text-light nav-link"><i class="fas fa-user-plus"></i>Sign up</span><% end %></li>
              <li class="nav-item"><%= link_to new_user_session_path do %><span class="text-light nav-link"><i class="fas fa-sign-in-alt"></i>Log in</span><% end %></li>
          　<% end %>
          </ul>
      　</nav>
      </div>
    </nav>
  </header>


    <%= flash[:notice] %>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
           <p>CopyRight Infratop.inc</p>
          </div>
       </div>
      </div>
    </footer>
  </body>
</html>
