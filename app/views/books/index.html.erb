 <%= pluralize(@book.errors.count, "error") %>  prohibited this obj from being saved:
  <ul>
   <% @book.errors.full_messages. each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>

<h1>User Info</h1>

<h1>New Book</h1>
 <%= form_with model: @book, local:true do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
 <% end %>

<h1>Books</h1>
<table>
 <thread>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thread>
 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td><%= image_tag book.user.get_profile_image("100x100") %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
 </tbody>
</table>